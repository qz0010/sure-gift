.doc {
  display: flex;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: #fff;
  color: #000;

  &__wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1 1 0;
    padding: 15px 10px 10px;
  }

  &__body {
    width: 100%;
    flex: 1 1 100%;
    overflow: auto;
  }

  &__article {
    padding: 10px 10px 40px;
    margin: 0 auto;
  }

  &__article, &__footer {
    max-width: 640px;
  }

  &__footer {
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 6px;

    &-btn {
      padding: 15px 10px;
      width: 40%;
      text-align: center;
      border-radius: 4px;
      transition background $sFast ease-in-out
      cursor: pointer;
      font-family: Arial, sans-serif;
      font-size: 16px;
      line-height: 1;
      color: #fff;
      background: $c-btn-1-theme-1-bg;

      &:hover {
        background: $c-btn-1-theme-1-bg-hover;
      }
    }
  }
}

.doc__article {
  font-size: 16px;
  font-weight: 400;
  line-height: 1.15;

  h2,
  h3 {
    font-size: 1.25em;
    margin: 1em 0 0.5em;
  }

  h3 {
    font-size: 1em;
  }

  p {
    margin: 0.7em 0 1em;
  }

  strong {
    font-weight: 500
  }
}

@media all and (max-width: 650px) {
  .doc {
    &__wrap {
      padding-top: 5px;
    }

    &__footer {
      &-btn {
        width: 100%;
      }
    }
  }

  .doc__article {
    font-size: 14px;
  }
}
