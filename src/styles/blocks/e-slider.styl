.e-slider
  font-size: 0
  position: relative

  &__related
    &-items
      display: flex
    &-item
      margin-right: 10px
    &-img
      width: 245px
      height: 120px
      border: 2px solid transparent;
      border-radius: 7px;

      &.f-active
        border-color: #CBA150

  &__main-img
    padding-bottom: 50%
    max-height 400px
    border-radius: 7px;

  &__main-img, &__related-img
    background-size: cover
    background-position: center 0


+large_2()
  .e-slider
    &_maxw-1
      max-width 756px

+desktop()
  .e-slider

    &__related
      position: absolute;
      left: 0
      bottom: 0
      width: 100%
      padding: 0 0 20px 20px
      //&-items
      &-item
        margin-right: 24px

        &_poster
          display: none

      &-img
        box-sizing content-box
        width: 155px
        height: 104px
        border-width: 3px;
        border-radius: 10px;
