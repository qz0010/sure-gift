.gifts
  position: relative
  font-size: 14px

  &__body
    margin: -20px 0

    &-row
        margin: 20px 0

  &__text
    &-head
      &_mb-1, &_mb-2
        margin-bottom: 20px
      &:last-child
        margin-bottom: 0
    &-title
      font-size: 34px
      word-break break-word
    & > p
      margin: 6px 0
      &:last-child
        margin-bottom: 0

  &__info
    &-value
      color: $c-3

+extra_small()
  .gifts
    &__info
      &-item
        width: calc(50% - 20px)

+large_2()
  .gifts
    &__col
      & + &
        margin-top: 27px

    &__body
      display: flex
      flex-direction column
      margin: -10px 0

      &-row
        margin: 10px 0
        order: 2

        &_related
          //margin-top: 0 !important
          order: 1

    &__info
      &-row
        display: flex
        flex-wrap wrap
        margin: 0 -10px -12px

      &-item
        margin: 0 10px 12px

+min_large_2()
  .gifts
    font-size: 20px

    &__row
      display: flex
      margin: 0 -12px

    &__col
      margin: 0 12px

      &_text
        width: 28%

      &_content
        padding-top: 8px
        flex: 1

    &__body
      margin: -47px 0
      &-row
        margin: 47px 0

    &__text
      &-head
        &_mb-2
          margin-bottom: 32px
      &-title
        font-size: 45px
      & > p
        margin: 32px 0

    &__info
      &-item
        & + &
          margin-top: 20px
