.h-share
  position: relative;
  color: #fff;

  &__nav
    //position: absolute;
    //top: calc(100% + 14px);
    //right: 0
    width: 184px
    padding: 19px 12px 19px 16px
    transition opacity $sFast ease-in-out, visibility $sFast ease-in-out
    font-size: 14px
    font-weight: 500
    border-radius: 12px;
    box-shadow: 0 7px 14px 0 rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
    color: #000;

    //&:not(.f-active)
    //  visibility: hidden;
    //  opacity: 0;
    //  pointer-events none

  &__item
    margin-bottom: 20px
    &:last-child
      margin-bottom: 0

  &__btn
    color: #fff

    &-text
      margin-left: 12px

    & > svg
      vertical-align: middle
  //  font-size: 16px
  //  padding: 0
  //  border-radius: 8px
  //  font-weight: 600
  //  &-text
  //    display: none;
  //    margin-left: 10px

  &__link
    display: flex;
    align-items center
    font-size: 16px
    cursor: pointer;

    &-ico
      width: 25px
      margin-right: 12px
      & > svg
        max-width 22px
        max-height: 22px
        width: auto;
        height: auto;

+small()
  .h-share
    &__btn
      padding: 0
      &-text
        display: none


