.footer
  margin-top: 18px
  padding: 24px 0 30px
  border-top: 1px solid rgba(151, 151, 151, 0.1)

  &__links
    display: flex
    color: $cBl-1-1

    &-link
      font-size: 14px
      & + &
        margin-left: 14px

+mobile()
  .footer
    &__item
      & + &
        margin-top: 25px

      &-item
        & + &
          margin-top: 20px

+desktop()
  .footer
    display: flex
    align-items center
    justify-content: space-between;
    margin-top: 58px
    padding: 30px 0

    &__item
      display: flex
      margin: 0 -20px
      &_text
        order: 1
      &_social
        order: 2

      &-item
        margin: 0 20px

        &_c
          order: 1
        &_links
          order: 2
