.mxn-pay-item
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  box-sizing: border-box
  text-align: center

  &_sz-1
    width: 100%
    height: 100%
    min-width: 142px
    min-height: 90px
    padding: 8px 20px
    font-size: 10px
    letter-spacing: -0.06px

  &_theme-1
    border: 2px solid $cBl-3-29
    border-radius: 7px

    &.f-active
      border-color: $cBl-3-3

  &-row
    margin-bottom: 10px
    &:last-child
      margin-bottom: 0


+mobile()
  .mxn-pay-item
    &_sz-1
      min-height: 73px
      padding: 6px 15px
      font-size: 9px
      letter-spacing: -0.05px

    &-row
      margin-bottom: 6px
