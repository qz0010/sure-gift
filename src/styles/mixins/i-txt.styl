.mxn-text-counter
  font-size: 24px
  letter-spacing: -0.13px
  color: $cBl-3-3
  &_pos-a
    position: absolute
  &_pos-1
    top: 0
    right: 0
+mobile()
  .mxn-i-txt
    &_pr-2
      padding-right: 70px
  .mxn-text-counter
    font-size: 18px
+min_large_2()
  .mxn-i-txt
    &_area
      &_sz-2
        font-size: 45px
        letter-spacing: -0.25px
+min_extra_large()
  .mxn-i-txt
    &_theme-1, &_theme-1.ng-select .ng-input > input, &_theme-1.ng-select .ng-value
      font-size: 24px

+ultra_small()
  .mxn-i-txt
    &_theme-1, &_theme-1.ng-select .ng-input > input, &_theme-1.ng-select .ng-value
      font-size: 16px
